<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradual_blue"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_top"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintBottom_toTopOf="@+id/ll_content"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="e学"
                android:textSize="70sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/White"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="师生一体  在线学习"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/White"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintTop_toBottomOf="@id/ll_top"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_weight="4"
            android:background="@drawable/shape_corner_white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <LinearLayout
                android:background="@color/DeepBlue"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <Button
                    android:id="@+id/switch_learn"
                    android:text="教师管理"
                    android:textColor="@color/White"
                    android:background="@color/DeepBlue"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/module_learn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/layoutLearnText"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginTop="30dp"
                            android:src="@drawable/img_txt"
                            android:layout_width="match_parent"
                            android:layout_height="60dp" />
                        <TextView
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="文本学习"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:id="@+id/layoutLearnPhoto"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginTop="30dp"
                            android:src="@drawable/img_photo"
                            android:layout_width="match_parent"
                            android:layout_height="60dp" />
                        <TextView
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="图片学习"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:id="@+id/layoutLearnVideo"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginTop="30dp"
                            android:src="@drawable/img_video"
                            android:layout_width="match_parent"
                            android:layout_height="60dp" />
                        <TextView
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="视频学习"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_weight="1"
                        android:id="@+id/layoutNotice"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginTop="30dp"
                            android:src="@drawable/img_notice"
                            android:layout_width="match_parent"
                            android:layout_height="60dp" />
                        <TextView
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="公告管理"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:id="@+id/layoutBBS"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginTop="30dp"
                            android:src="@drawable/img_bbs"
                            android:layout_width="match_parent"
                            android:layout_height="60dp" />
                        <TextView
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="查看论坛"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:id="@+id/layoutRank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginTop="30dp"
                            android:src="@drawable/img_vote"
                            android:layout_width="match_parent"
                            android:layout_height="60dp" />
                        <TextView
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="查看排名"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_weight="1"
                        android:id="@+id/layoutExamEdit"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginTop="30dp"
                            android:src="@drawable/img_edit"
                            android:layout_width="match_parent"
                            android:layout_height="60dp" />
                        <TextView
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="考题编辑"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:id="@+id/layoutExamResult"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginTop="30dp"
                            android:src="@drawable/img_score"
                            android:layout_width="match_parent"
                            android:layout_height="60dp" />
                        <TextView
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="查看成绩"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:id="@+id/layoutRate"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginTop="30dp"
                            android:src="@drawable/img_rate"
                            android:layout_width="match_parent"
                            android:layout_height="60dp" />
                        <TextView
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="学习进度"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>