<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="@drawable/gradual_blue">
    <LinearLayout
        android:background="@drawable/shape_corner_white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="30dp"
            android:textSize="40sp"
            android:textColor="@color/DeepBlue"
            android:gravity="center"
            android:text="每日一练"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/module_exam"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/buttonOrderExam"
                    android:textSize="22sp"
                    android:background="@drawable/shape_corner_blue"
                    android:textColor="@color/White"
                    android:text="顺序练习"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/buttonRandomExam"
                    android:textSize="22sp"
                    android:background="@drawable/shape_corner_blue"
                    android:textColor="@color/White"
                    android:text="随机练习"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/buttonFinalExam"
                    android:textSize="22sp"
                    android:background="@drawable/shape_corner_blue"
                    android:textColor="@color/White"
                    android:text="考试模式"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/buttonMyScore"
                    android:textSize="22sp"
                    android:background="@drawable/shape_corner_blue"
                    android:textColor="@color/White"
                    android:text="我的成绩"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/buttonCollection"
                    android:textSize="22sp"
                    android:background="@drawable/shape_corner_blue"
                    android:textColor="@color/White"
                    android:text="查看收藏"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>